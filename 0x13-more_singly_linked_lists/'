#include "lists.h"
/**
 * add_nodeint_end - adds node at the end of the LL
 * @n: value to be added at the end of the Node
 * @head: pointer to the head node
 * Return: pointer type
 */
listint_t *add_nodeint_end(listint_t **head, const int n)
{
	listint_t *temp = malloc(sizeof(temp));
	int i;

	if (*head == NULL)
	{
		return (NULL);
	}
	for (i = 0; *head != NULL; i++)
	{
		if ((*head)->next == NULL)
		{
			temp->n = n;
			temp->next = NULL;
			*head = temp;
			return (temp);
		}
		*head = (*head)->next;
	}
	return (temp);
}
